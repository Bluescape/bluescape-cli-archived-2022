{
  "name": "@bluescape/cli",
  "version": "1.0.0",
  "description": "Bluescape command line tool",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "bs": "npm run build && node ./build/cli.js",
    "package:linux": "pkg . --no-bytecode --targets node14-linux-x64 --output bin/linux/bluescape",
    "package:macos": "pkg . --no-bytecode --targets node14-macos-x64 --output bin/macos/bluescape",
    "format": "prettier --write",
    "format:check": "prettier --loglevel warn --check \"**/*.{ts,js,json,yaml}\"",
      "lint": "eslint -c .eslintrc.js \"{src,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "test": "npm run test "
  },
  "main": "./build/cli.js",
  "bin": {
    "bluescape": "./build/cli.js",
    "bs": "./build/cli.js"
  },
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "cli"
  ],
  "author": "sathishkumar.sethu@bluescape.com",
  "license": "ISC",
  "dependencies": {
    "axios": "0.27.2",
    "chalk": "4.1.1",
    "clear": "0.1.0",
    "clui": "0.3.6",
    "conf": "10.1.2",
    "csvtojson": "2.0.10",
    "inquirer": "8.2.4",
    "node-fetch": "3.2.4",
    "ora": "5.4.1",
    "validator": "13.7.0",
    "yargs": "17.4.1"
  },
  "devDependencies": {
    "@types/clear": "0.1.2",
    "@types/configstore": "5.0.1",
    "@types/inquirer": "8.2.1",
    "@types/node": "17.0.31",
    "@types/validator": "13.7.2",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "babel-eslint": "10.1.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.2.2",
    "eslint-plugin-prettier": "4.0.0",
    "import-sort-style-module": "6.0.0",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-organize-imports": "3.0.0",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "eslint"
    }
  }
}
